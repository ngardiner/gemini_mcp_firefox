{
  "manifest_version": 2,
  "name": "Gemini MCP Client",
  "version": "0.1.0",
  "description": "Monitors gemini.google.com for tool calls and intercepts them.",
  "permissions": [
    "activeTab",
    "https://gemini.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content_script.js"]
    }
  ]
}
